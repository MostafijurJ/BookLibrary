<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>login.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>login.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>login.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Book</servlet-name>
        <servlet-class>login.Book</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Book</servlet-name>
        <url-pattern>/Book/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowBook</servlet-name>
        <servlet-class>login.ShowBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowBook</servlet-name>
        <url-pattern>/ShowBook/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>View_Book</servlet-name>
        <servlet-class>login.View_Book</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>View_Book</servlet-name>
        <url-pattern>/View_Book/*</url-pattern>
    </servlet-mapping>

</web-app>